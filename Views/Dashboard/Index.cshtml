@{
    Layout = "_Layout";
    ViewBag.Title = "Dashboard";

    List<ContactModel> Contacts = ViewBag.Contacts;
    
}


<div class="container pt-4 p-3">
    <div class="row">

        @if (Contacts == null || Contacts.Count == 0)
        {
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No contacts saved yet</p>
                    <a asp-controller="Contact" asp-action="Create">Add One!</a>
                </div>
            </div>
        }
        else
        {
            @foreach(var contact in Contacts)
            {
                <div class="col-md-4 mb-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h3 class="card-title text-capitalize">@contact.Name</h3>
                            <p class="m-2">@contact.PhoneNumber</p>
                            <div class="row mx-auto">
                                <a asp-controller="Contact" asp-action="Edit" asp-route-id="@contact.Id" class="btn btn-secondary bg-warning mb-2 col-lg-6">Edit</a>
                                <form id="formDeleteContact" asp-controller="Contact" asp-action="Delete" asp-route-id="@contact.Id" class="col-lg-6">
                                    <button type="Submit" class="btn btn-danger mb-2 col-lg-12">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>    
                
            }
        }
    </div>
</div>

@section Scripts{
    <script src="~/js/Dashboard.js"></script>
}