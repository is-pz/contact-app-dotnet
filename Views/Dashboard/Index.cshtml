@{
    Layout = "_Layout";
    ViewBag.Title = "Dashboard";

    List<Contact> Contacts = ViewBag.Contacts;
}


<div class="container pt-4 p-3">
    <div class="row">

        @if (Contacts == null || Contacts.Count == 0)
        {
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No contacts saved yet</p>
                    <a asp-controller="Contact" asp-action="Create">Add One!</a>
                </div>
            </div>
        }
        else
        {
            @foreach(var contact in Contacts)
            {
                <div class="col-md-4 mb-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h3 class="card-title text-capitalize">@contact.Name</h3>
                            <p class="m-2">@contact.PhoneNumber</p>
                            <a asp-controller="Contact" asp-action="Details" class="btn btn-secondary mb-2">Edit Contact</a>
                            <a asp-controller="Contact" asp-action="Delete" class="btn btn-danger mb-2">Delete Contact</a>
                        </div>
                    </div>
                </div>    
                
            }
        }
    </div>
</div>