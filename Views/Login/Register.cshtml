@{
    Layout = "_Layout";

}

<div class="col-lg-8 mx-auto text-center">
    <h2>Regsitrarse</h2>
        <form class="col-lg-8 mx-auto"  asp-controller="Login" asp-action="Register" method="POST">
            <div class="mt-3">
                <label for="Name" >Nombre de usuario</label>
                <input class="form-control" name="Name" placeholder="Ingrese un nombre de usuario"  required/>
            </div>
             <div class="mt-3">
                <label for="Email" >Correo electronico</label>
                <input class="form-control" name="Email" type="email" placeholder="Ingrese un correo electronico" required/>
            </div>
            <div class="mt-3">
                <label for="Password">Contraseña</label>
                <input class="form-control" name="Password" type="password" placeholder="Ingrese una contraseña" required/>
            </div>

            <div class="mt-3">
                <button class="form-control" type="submit">Registrarse</button>
            </div>

        </form>
 
</div>
