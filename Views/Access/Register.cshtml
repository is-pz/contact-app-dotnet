@{
    Layout = "_Layout";
    ViewBag.Title = "Registro";
    MessageModel Message = ViewBag.Message;
}

<div class="col-lg-8 mx-auto text-center">
    <h2>Sign In</h2>
    @if (Message != null)
    {
        <div class="alert alert-@Message.Type col-lg-6 mx-auto" role="alert">
            @Message.Message
        </div>
    }
    <form class="col-lg-8 mx-auto"  asp-controller="Access" asp-action="Register" method="POST">
        <div class="mt-3">
            <label for="Name" >Username</label>
            <input class="form-control" name="Name" placeholder="Enter a username" required />
        </div>
            <div class="mt-3">
            <label for="Email" >Email</label>
            <input class="form-control" name="Email" type="email" placeholder="Enter an email" required />
        </div>
        <div class="mt-3">
            <label for="Password">Password</label>
            <input class="form-control" name="Password" type="password" placeholder="Enter a password" required />
        </div>

        <div class="mt-3">
            <button class="form-control btn bg-info text-white" type="submit">Sign in</button>
        </div>

    </form>
</div>
