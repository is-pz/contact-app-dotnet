@{
    Layout = "_Layout";
    ViewBag.Title = "Incio de sesión";
}

<div class="col-lg-8 mx-auto text-center">
    <h2>Inciar sesión</h2>
    <form class="col-lg-8 mx-auto" asp-controller="User" asp-action="Login" method="POST">
        <div class="mt-3">
            <label for="Email">Correo electronico</label>
            <input class="form-control" name="Email" type="email" placeholder="Ingrese un correo electronico" required />
        </div>
        <div class="mt-3">
            <label for="Password">Contraseña</label>
            <input class="form-control" name="Password" type="password" placeholder="Ingrese una contraseña" required />
        </div>

        <div class="mt-3">
            <button class="form-control" type="submit">Inciar sesión</button>
        </div>

    </form>
</div>
