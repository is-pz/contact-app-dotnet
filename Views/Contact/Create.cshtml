@{
    Layout = "_Layout";
    ViewBag.Title = "Add contact";

}



<div class="col-lg-8 mx-auto text-center">
    <h2>Add contact</h2>
    <form class="col-lg-8 mx-auto" asp-controller="Contact" asp-action="Create" method="POST">
        <div class="mt-3">
            <label for="Name">Name</label>
            <input class="form-control" name="Name" placeholder="Enter contact name" required />
        </div>
        <div class="mt-3">
            <label for="Email">Phone Number</label>
            <input class="form-control" name="PhoneNumber" type="tel" placeholder="Enter a phone number" required />
        </div>

        <div class="mt-3">
            <button class="form-control" type="submit">Add</button>
        </div>

    </form>
</div>
